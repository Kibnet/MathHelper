{
  "name": "math-helper",
  "version": "1.0.0",
  "description": "Expression Editor with algebraic transformations",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:with-dev": "node --input-type=module -e \"import { spawnSync } from 'node:child_process'; const isWin = process.platform === 'win32'; const cmd = isWin ? 'powershell' : 'bash'; const args = isWin ? ['-ExecutionPolicy','Bypass','-File','./run-e2e-with-dev.ps1'] : ['./run-e2e-with-dev.sh']; const res = spawnSync(cmd, args, { stdio: 'inherit' }); process.exit(res.status ?? 1);\"",
    "test:e2e:with-dev:ps": "powershell -ExecutionPolicy Bypass -File .\\run-e2e-with-dev.ps1",
    "test:e2e:with-dev:sh": "bash ./run-e2e-with-dev.sh",
    "dev:debug": "node --inspect-brk node_modules/.bin/vite"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "mathsteps": "github:Kibnet/mathsteps"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "jsdom": "^27.3.0",
    "typescript": "^5.3.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "keywords": [
    "expression",
    "parser",
    "algebra",
    "transformation"
  ],
  "author": "",
  "license": "MIT"
}
